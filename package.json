{
  "name": "@soften/transform",
  "version": "0.0.1",
  "private": false,
  "description": "Soften 集成 tailwincss 样式和自动引入基础组件",
  "homepage": "https://github.com/minjie-lock/soften.transform#readme",
  "bugs": {
    "url": "https://github.com/minjie-lock/soften.transform/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/minjie-lock/soften.transform.git"
  },
  "license": "ISC",
  "author": "Lock <https://github.com/minjie-lock>",
  "type": "module",
  "main": "./dist/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./metro": {
      "types": "./dist/src/metro/index.d.ts",
      "require": "./dist/metro/index.js",
      "import": "./dist/metro/index.mjs"
    },
    "./jsx-runtime": {
      "types": "./src/types/index.d.ts"
    },
    "./jsx-dev-runtime": {
      "types": "./src/types/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "tsconfig.json",
    "src/types",
    "src/metro/transformer.ts"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "rslib build"
  },
  "dependencies": {
    "metro-babel-transformer": "^0.82.4",
    "@react-native/metro-config": "^0.80.1"
  },
  "peerDependencies": {
    "babel-plugin-module-resolver": "^5.0.2",
    "metro": "^0.82.4",
    "metro-core": "^0.82.4",
    "react": "19.0.1",
    "react-native": "0.80.1",
    "@babel/preset-typescript": "^7.27.1"
  },
  "devDependencies": {
    "@react-native/metro-babel-transformer": "^0.80.1",
    "@rsbuild/plugin-react": "^1.3.4",
    "@rslib/core": "^0.10.6",
    "@types/jest": "^30.0.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "2.8.8",
    "react-test-renderer": "19.0.0",
    "typecript": "^0.0.1-security",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18"
  }
}