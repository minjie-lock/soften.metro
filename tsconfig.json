{
  "compilerOptions": {
    "target": "es2018",
    "module": "es2022",
    "moduleResolution": "bundler",
    "lib": [
      "es2018"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}